{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "nodenext",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "isolatedModules": true,
    "rootDir": "src",
    "outDir": "dist",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleDetection": "legacy"
  },
  "include": [
    "src",
    "types/index.d.ts"
  ],
  "exclude": [
    "src/templates"
  ]
}
